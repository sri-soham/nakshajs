<%- include('/layouts/header.ejs'); -%>
<div id="page-title">Profile</div>
<div class="col100p-np cols-parent">
  <div class="col-box col50p-np">
    <div class="col100p-np inner-box">
      <div class="inner-box-header">Change Password</div>
      <div class="inner-box-content">
        <form name="frm_change_password" id="frm_change_password" method="post" action="/change_password" class="pos-rel">
          <table class="for-form col100p">
            <tr>
              <td class="col150">Current Password: </td>
              <td><input type="password" name="current_password" class="col100p" /></td>
            </tr>
            <tr>
              <td>New Password: </td>
              <td><input type="password" name="new_password" class="col100p" /></td>
            </tr>
            <tr>
              <td>Confirm New Password: </td>
              <td><input type="password" name="confirm_password" class="col100p" /></td>
            </tr>
            <tr>
              <td>&nbsp;</td>
              <td><input type="submit" name="submit1" value="Change Password" /></td>
            </tr>
          </table>
        </form>
      </div>
    </div>
  </div>
  <div class="col-box col50p-np-wgl">
    <div class="col100p-np inner-box mb10 pos-rel">
      <div class="inner-box-header">Bing Maps Key</div>
      <div class="inner-box-content">
        <input type="text" name="bing_maps_key" value="<%= user.bing_maps_key %>" class="col-box col80p" />
        <input type="button" name="btn_bing_maps" id="btn_bing_maps" value="Save" class="col-box col15p" />
      </div>
    </div>
    <div class="col100p-np inner-box mt20 pos-rel">
      <div class="inner-box-header">Google Maps Key</div>
      <div class="inner-box-content">
        <input type="text" name="google_maps_key" value="<%= user.google_maps_key %>" class="col-box col80p" />
        <input type="button" name="btn_google_maps" id="btn_google_maps" value="Save" class="col-box col15p" />
      </div>
    </div>
  </div>
</div>
<script type="text/javascript">
  $(document).ready(function() {
    UserProfile.init();
  });
</script>
<%- include('/layouts/footer.ejs'); -%>
